.comments__footer.comments__footer--user
  form(action=`/articles/${id}/comments` method='POST' enctype="application/x-www-form-urlencoded")
    input(type="hidden" name="_csrf" value=csrfToken)
    .comments__avatar.avatar
      img(src=`/img/${user.avatar ? user.avatar : `/icons/smile.svg`}` alt='аватар пользователя')
    label
      textarea(rows='1' name='text' placeholder='Присоединиться к обсуждению' value = `${comment!== undefined ? comment : ``}`)
        | #{comment}
    button.comments__button.button.button--colored(type='submit') Опубликовать
    +insertErrorMessages(validationMessages)
