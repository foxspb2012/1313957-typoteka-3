extends layout.pug

block content
  main.main-page.main-page--padding
    section.main-page__publication.publication
      h1.publication__title Комментарии
      ul.publication__list
        each article, index in articles
          li.publication__list-item
            .publication__header
              img.publication__list-image(src='/img/'+ [user.avatar] width='20' height='20' alt='Аватар пользователя')
              b.publication__list-name #{user.name + ' ' +user.surname}
              time.publication__item-time(datetime= article.createdAt) #{article.createdAt}
            a.publication__item-text(href=`/+${article.id}`) #{article.title}
            each comment in comments[index]
              p.publication__text-strong #{comment.text}
            button.publication__button.button.button--close-item(type='button')
              span.visually-hidden Закрыть строку списка
